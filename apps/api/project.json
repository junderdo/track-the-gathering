{
  "name": "api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/api/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "target": "node",
        "compiler": "tsc",
        "outputPath": "dist/apps/api",
        "main": "apps/api/src/main.ts",
        "tsConfig": "apps/api/tsconfig.app.json",
        "assets": ["apps/api/src/assets"],
        "webpackConfig": "apps/api/webpack.config.js",
        "generatePackageJson": true,
        "transformers": [
          {
            "name": "@nestjs/swagger/plugin",
            "options": {
              "introspectComments": true
            }
          }
        ]
      },
      "configurations": {
        "development": {},
        "production": {}
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "api:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "api:build:development"
        },
        "production": {
          "buildTarget": "api:build:production"
        }
      }
    },
    "pre-deploy": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "commands": [
          "nx run api:migrate:build",
          "nx run api:migrate:setup",
          "docker build -f ./apps/api/Dockerfile . -t api"
        ],
        "parallel": false
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/api/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/api/jest.config.ts"
      }
    },
    "migrate:build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "platform": "node",
        "outputPath": "dist/apps/api/migrate",
        "format": ["cjs"],
        "bundle": true,
        "main": "apps/api/src/migrate/main.ts",
        "tsConfig": "apps/api/tsconfig.app.json",
        "generatePackageJson": true,
        "esbuildOptions": {
          "sourcemap": true,
          "outExtension": {
            ".js": ".js"
          }
        }
      }
    },
    "migrate:setup": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "mkdir -p ./dist/apps/api/migrate",
          "cp ./tools/templates/pg-migrate/datasource.js ./dist/apps/api/migrate"
        ],
        "parallel": false
      }
    },
    "migrate:local": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx run api:migrate:build",
          "nx run api:migrate:setup",
          "npx typeorm -o -d ./dist/apps/api/migrate/datasource.js migration:generate ./dist/apps/api/migrate/migrations/Migration",
          "npx typeorm -d ./dist/apps/api/migrate/datasource.js migration:run"
        ],
        "parallel": false
      }
    }
  },
  "tags": []
}
